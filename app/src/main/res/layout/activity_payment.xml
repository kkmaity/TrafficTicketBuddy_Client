<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Instant Payment"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:gravity="center|start"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Amount : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/lato_bold"
                android:text=" $ "/>
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/lato_bold"
                android:text=""/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardPaymantFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/etCardnumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#202020"
                        android:textColorHint="#696969"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="Enter Card Number"
                        android:background="@null"
                        android:textSize="@dimen/_13sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/mastercard"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#d2d2d2"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#202020"
                        android:textColorHint="#696969"
                        android:paddingRight="@dimen/_16sdp"
                        android:text="Expiry Date:"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/et_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_weight="1"
                            android:hint="MM"
                            android:fontFamily="@font/lato_regular"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:textColor="#202020"
                            android:textColorHint="#696969"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:maxLength="2"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:inputType="date"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="/"
                            android:paddingBottom="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:inputType="date"
                            android:textColor="#202020"
                            android:textColorHint="#696969"
                            android:textSize="16sp"/>
                        <EditText
                            android:id="@+id/et_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_weight="1"
                            android:hint="YY"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:maxLines="1"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="#202020"
                            android:textColorHint="#696969"
                            android:imeOptions="actionNext"
                            android:maxLength="2"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:inputType="date"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>


                    <EditText
                        android:id="@+id/et_cvv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_weight="0.6"
                        android:padding="10dp"
                        android:textSize="@dimen/_12sdp"
                        android:maxLength="3"
                        android:hint="CVV"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#202020"
                        android:textColorHint="#696969"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingRight="20dp"
                        android:textColor="@android:color/transparent"
                        android:text="Expiry Date:"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#d2d2d2"
                        android:orientation="horizontal">
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:weightSum="0.7"
                        android:layout_height="1dp"
                        android:background="#d2d2d2"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.6"  />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardPay"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textAllCaps="true"
                            android:fontFamily="@font/lato_bold"
                            android:text="Pay Now"
                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textAllCaps="true"
                            android:text="Save &amp; Pay"
                            />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/linSuccessPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:src="@drawable/logo_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Payment Successfully Done"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Thank You"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


</LinearLayout>